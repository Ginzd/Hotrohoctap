<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivIconTheLoai"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/class_icon"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/ivIconTheLoai"
        android:layout_toLeftOf="@+id/layout1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMaLop1"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:hint="Ma lop"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvTenLop1"
            android:hint="Ten lop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imgViewJoinClass"
            android:src="@drawable/join"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/imgViewEditJoinClass"
            android:src="@drawable/edit"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imgViewDeleteJoinClass"
            android:src="@drawable/delete"/>
    </LinearLayout>

</RelativeLayout>