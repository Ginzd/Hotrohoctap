<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivIconTheLoai"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/student"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/ivIconTheLoai"
        android:layout_toLeftOf="@+id/layout1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_idclass"
            android:text="Ma Lop" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_masv"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:hint="Ma Sinh Vien"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_tensv"
            android:hint="Ten Sinh Vien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/iv_edit_sv"
            android:src="@drawable/edit"/>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/iv_delete_sv"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete"/>
    </LinearLayout>

</RelativeLayout>