<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ThemLopActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Thêm Lớp"/>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/add_class"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="15"
        android:gravity="center"
        android:background="@drawable/edittext_style"
        android:hint="Mã Lớp"
        android:textColor="#000"
        android:id="@+id/edt_MaLop"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="15"
        android:gravity="center"
        android:background="@drawable/edittext_style"
        android:hint="Tên Lớp"
        android:textColor="#000"
        android:id="@+id/edt_TenLop"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnThemLop"
            android:onClick="ThemLop"
            android:background="@drawable/background_button"
            android:text="Thêm"/>
        <Button
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_button"
            android:layout_height="wrap_content"
            android:id="@+id/btnUpdateClass"
            android:onClick="huyThemClass"
            android:text="Hủy"/>
    </LinearLayout>
    <Button
        android:id="@+id/button6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:layout_marginTop="10dp"
        android:onClick="danhSachLop"
        android:text="Danh Sách Lớp" />

</LinearLayout>